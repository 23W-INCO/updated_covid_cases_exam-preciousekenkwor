// .devcontainer/devcontainer.json
{
  "name": "UI Codespace",
  "dockerFile": "Dockerfile",
  
  "forwardPorts": [8000],
  "postCreateCommand": "npm run installations",
  "remoteUser": "codespace",
  "workspaceMount": "source=/workspace,target=/workspace,type=volume",
  "containerEnv": {
    "PIPENV_VENV_IN_PROJECT": "1"
  },
  "runArgs": ["-v", "/workspace:/workspace", "--workdir", "/workspace", "--entrypoint", "pnpm", "ui", "codespace-start"],
  
 
}
